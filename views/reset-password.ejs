<div id="" class="loginContainer container mb-5">
  <div id="hero-image"></div>
  <div id="hero-content">
    <div class="d-flex flex-column">
      <h1 class="h1 text-center mt-5 text-light">Reset Password</h1>
      <form class="d-grid mb-3" action="" method="POST">
        <div class="form-floating mb-3">
          <input class="form-control" name="email" id="email" type="email" placeholder="example@gmail.com" />
          <label class="" for="email">Email</label>
        </div>
       
        <button id="login-btn" class="btn btn-lg btn-warning">Send link</button>
        
      </form>
      
      <% if(locals.errors) {%> 
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% errors.forEach(err => { %>
              <li><%- err.msg %> </li>
            <% }) %> 
          </ul>
        </div>
      <%}%>
    </div>
    
  </div>
 
</div>
<script src="/public/javascripts/passwordToggler.js"></script>