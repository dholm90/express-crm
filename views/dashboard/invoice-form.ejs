<!-- <div class="container mb-5"> -->
  <% if(locals.errors) {%> 
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(err => { %>
          <li><%- err.msg %> </li>
        <% }) %> 
      </ul>
    </div>
  <%}%>
  <h1 class=""><%- title %></h1>
  <hr>
  <!-- <div class="card bg-light shadow"> -->
    <!-- <div class="card-body"> -->
      <form class="" action="" method="POST">
        <div class="form-floating mb-3">
          <input class="form-control" id="title" name="title" type="text" required="true" placeholder="Invoice 1" value='<%= invoice ? invoice.title : '' %>' />
          <label for="title" class="form-label">Title:</label>
        </div>
        
        <select class="form-select mb-3" id="client" name="client" required="true" placeholder="Client Name">
          <option value="Client">Client</option>
          <% clients.forEach(client => { %>
            <option value="<%- client._id %>"><%- client.name %></option>
          <% }) %>
        </select> 
        <div class="form-floating mb-3">
          <input class="form-control" type="date" name="jobStart" id="invoiceStart" required="true" placeholder="01/01/2022" value='<%= invoice ? invoice.jobStart_formatted : '' %>'>
          <label for="invoiceStart">Job Start:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="date" name="jobEnd" id="invoiceEnd" required="true" placeholder="01/01/2022" value='<%= invoice ? invoice.jobEnd_formatted : '' %>'>
          <label for="invoiceEnd">Completed By:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="number" name="tax" id="tax" min="0" max="100" required="true" placeholder="13" value='<%= invoice ? invoice.tax : '' %>'>
          <label for="tax">Tax %:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="number" name="markup" id="markup" min="0" required="true" placeholder="13" value='<%= invoice ? invoice.markup : '' %>'>
          <label for="markup">Material Markup %:</label>
        </div>
          
        
        
    
        <button class="btn btn-primary">Create Quote</button>
      </form>
