<div class="scaleable-wrapper" id="scaleable-wrapper">
  <div class="ratio8511 bg-white text-dark p-5 d-flex flex-column " id="scaleable-design">
    <div class="row mb-3">
      <div class="col">
        <h1 class="display-4"><%- business.name %> </h1>
        <%- business.street %><br>
        <%- business.city %>, <%- business.province %> <%- business.postal %><br>
        Phone: <%= phoneHelper.formatPhoneNumber(business.phone) %> <br>
        Email: <%- business.email %> 
      </div>
      <div class="col ">
        <h1 class="display-4 text-end">Quote</h1>
        <div class="row w-auto">
          <div class="col text-end">
            Supply Date <br>
            Quote ID <br>
            Due Date
          </div>
          <div class="col-auto" >
            <%- quote.jobStart_formatted_weekday %><br>
            <%- quote.title %> <br>
            <%- quote.jobEnd_formatted_weekday %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row mb-3">
      <div class="col">
        <h3>Addressed To:</h3>
      <%- quote.client.name %> <br>
      <%- quote.client.street %> <br>
      <%- quote.client.city %>, <%- quote.client.province %> <%- quote.client.postal %> <br>
      Phone: <%= phoneHelper.formatPhoneNumber(quote.client.phone) %> 
      </div>
           
    </div>
    <hr>
    <div class="row" >
      
      <div class="col">
        <h3 class="mb-3">Materials</h3>
        <table class="table table-striped table-bordered table-responsive w-100">
          <thead class="table-dark">
            <tr>
              <th scope="col text-nowrap">Title</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price/Item</th>
              <th scope="col" class="text-end">Price</th>
            </tr>
          </thead>
          <tbody>
            <% quote.materials.forEach(material => { %>
              
              <tr>
                <td class="align-middle"><%- material.name %></td>
                <td class="align-middle"><%- material.qty %> </td>
                <td class="align-middle">$<%-(material.price * (1 + (0.01 * quote.markup))).toFixed(2) %> </td>
                <td class="m-0 text-end">$<%- (material.qty * material.price * (1 + (0.01 * quote.markup))).toFixed(2)  %></td>             
              </tr>
              
            <% }) %> 
            <tr>
              <td></td>
              <td></td>
              <th class="text-end h5">Subtotal</th>
              <th class="text-end h5">$<%- quote.materials_subtotal %>  </th>
            </tr>
           
          </tbody>
        </table>
      </div>
      
    </div>
    <hr>
    <div class="row flex-grow-1" >
      
      <div class="col pt-5">
        <h3 class="mb-3">Services</h3>
        <table class="table table-striped table-bordered table-responsive w-100">
          <thead class="table-dark">
            <tr>
              <th scope="col text-nowrap">Title</th>
              <th scope="col w-100" width="60%">Description</th>
              <th></th>
              <th scope="col" class="text-end">Price</th>
            </tr>
          </thead>
          <tbody>
            <% quote.services.forEach(service => { %>
              
              <tr>
                <td class="align-middle"><%- service.title %></td>
                <td class="align-middle"><%- service.description %> </td>
                <td></td>
                <td class="m-0 text-end">$<%- service.price.toFixed(2) %></td>             
              </tr>
              
            <% }) %> 
            <tr>
              <td></td>
              <td></td>
              <th class="text-end h5">Subtotal</th>
              <th class="text-end h5">$<%- quote.services_subtotal %></th>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <th class="text-end h5 text-nowrap">Tax Rate</th>
              <th class="text-end h5"><%- quote.tax %>%</th>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <th class="text-end h4">Total</th>
              <th class="text-end h4">$<%- quote.total %>  </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
   
    <hr>
    <div class="row pb-0 mb-0">
      <p class="text-center">If you have any questions about this quote, please contact <br>
        <%- business.name %>, <%= phoneHelper.formatPhoneNumber(business.phone) %>, <%- business.email %>   
      </p>
    </div>
    
    
  </div>
</div>

<script src="/public/javascripts/scale.js"></script>
