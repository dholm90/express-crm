      <button class=" btn btn-primary">New Client</button>
    </form> -->
  </div>
  <hr>
  <!-- <div class="table-responsive text-nowrap"> -->
    <div class="card shadow bg-light mb-4">
      <div class="card-header"><h2>Unpaid</h2></div>
      <div class="card-body">
        <table class="table table-striped text-nowrap display-hours-export" style="width:100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Hours</th>
              <th>Date</th>
              <th>Hourly Rate</th>
              <th>Total</th>
              <th>Mark Paid</th>
              
            </tr>
          </thead>
          <tbody class="align-middle">
            <% hours.forEach(log => { %>
              <% if(!log.isPaid) {%>
              <tr>
                <td><%- log.employee.name %></td>
                <td><%- log.totalHours %></td>
                <td><%- log.date %></td>
                <td>$<%- log.employee.hourlyRate.toFixed(2) %></td>
                <td>$<%- (log.totalHours * log.employee.hourlyRate).toFixed(2) %></td>
                <td>
                  <form action="/dashboard/hour-log/<%- log._id %>/toggle-paid" method="post">
                    <button type="submit" class="btn btn-primary">Paid</button>
                  </form>
                </td>
              </tr>
            <% } %>
            <% }) %> 
          </tbody>
        </table>    
      </div>
    </div>

    <div class="card shadow bg-light mb-4">
      <div class="card-header"><h2>Paid</h2></div>
      <div class="card-body">
        <table class="table table-striped text-nowrap display-hours-export" style="width:100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Hours</th>
              <th>Date</th>
              <th>Hourly Rate</th>
              <th>Total</th>
              <th>Mark Unpaid</th>
              
            </tr>
          </thead>
          <tbody class="align-middle">
            <% hours.forEach(log => { %>
              <% if(log.isPaid) {%>
              <tr>
                <td><%- log.employee.name %></td>
                <td><%- log.totalHours %></td>
                <td><%- log.date %></td>
                <td>$<%- log.employee.hourlyRate.toFixed(2) %></td>
                <td>$<%- (log.totalHours * log.employee.hourlyRate).toFixed(2) %></td>
                <td>
                  <form action="/dashboard/hour-log/<%- log._id %>/toggle-paid" method="post">
                    <button type="submit" class="btn btn-primary">Unpaid</button>
                  </form>
                </td>
              </tr>
              <% } %>
            <% }) %> 
          </tbody>
        </table>    
      </div>
    </div>
  
