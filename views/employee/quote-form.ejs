  <% if(locals.errors) {%> 
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(err => { %>
          <li><%- err.msg %> </li>
        <% }) %> 
      </ul>
    </div>
  <%}%>
  <h1 class=""><%- title %></h1>
  <hr>
  <!-- <div class="card bg-light shadow"> -->
    <!-- <div class="card-body"> -->
      <form class="" action="" method="POST">
        <div class="form-floating mb-3">
          <input class="form-control" id="title" name="title" type="text" required="true" placeholder="Invoice 1" value='<%= form ? form.title : '' %>' />
          <label for="title" class="form-label">Title:</label>
        </div>
        
        <select class="form-select mb-3" id="client" name="client" required="true" placeholder="Client Name">
          
          <% if(form) {%> 
            <% clients.forEach(client => { %>
              <option value="<%- client._id %>" <%= form.client.equals(client._id) ? 'selected' : '' %>><%- client.name %></option>
            <% }) %>
            <% } else { %>
              <option value="">Select Client</option>
            <% clients.forEach(client => { %>

              <option value="<%- client._id %>"><%- client.name %></option>
            <% }) %>
            <% } %>
        </select> 
        <div class="form-floating mb-3">
          <input class="form-control" type="date" name="jobStart" id="jobStart" required="true" placeholder="01/01/2022" value='<%= form ? form.jobStart_formatted : '' %>'>
          <label for="jobStart">Job Start:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="date" name="jobEnd" id="jobEnd" required="true" placeholder="01/01/2022" value='<%= form ? form.jobEnd_formatted : '' %>'>
          <label for="jobEnd">Completed By:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="number" name="tax" id="tax" min="0" max="100" required="true" placeholder="13" value='<%= form ? form.tax : '' %>'>
          <label for="tax">Tax %:</label>
        </div>
        <div class="form-floating mb-3">
          <input class="form-control" type="number" name="markup" id="markup" min="0" required="true" placeholder="13" value='<%= form ? form.markup : '' %>'>
          <label for="markup">Material Markup %:</label>
        </div>
          
        
        
    
        <button class="btn btn-primary">Create Quote</button>
      </form>
