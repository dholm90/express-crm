<!-- <div class="container mb-5"> -->
  <% if(locals.errors) {%> 
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(err => { %>
          <li><%- err.msg %> </li>
        <% }) %> 
      </ul>
    </div>
  <%}%>
  <h1 class=""><u><%- title %></u></h1>
  <hr>
  <div class="card bg-light shadow mb-4">
    <div class="card-header h2">Update Password</div>
    <div class="card-body">
      <form class="" action="" method="POST">
        <div class="form-floating mb-3 d-flex">
          
          <input class="form-control" id="oldPassword" name="oldPassword" type="password" required placeholder="oldPassword"/>
          <label for="oldPassword" >Old Password:</label>
          <i class="bi bi-eye-slash fs-3" style="margin-left:-40px; margin-top: 10px; z-index: 1;" id="toggleOldPassword"></i>
        </div>
        <div class="form-floating mb-3 d-flex">

          <input class="form-control" id="newPassword" name="newPassword" type="password" required="true" placeholder="newPassword"/>
          <label for="newPassword" class="form-label">New Password:</label>
          <i class="bi bi-eye-slash fs-3" style="margin-left:-40px; margin-top: 10px;" id="toggleNewPassword"></i>

        </div>
        <div class="form-floating mb-3 d-flex">
          <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" placeholder="confirmPassword" required />
          <label for="confirmPassword">Confirm Password</label>
          <i class="bi bi-eye-slash fs-3" style="margin-left:-40px; margin-top: 10px;" id="toggleConfirmPassword"></i>
        </div>
        <button class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>

  <script src="/public/javascripts/passwordToggler.js"></script>
